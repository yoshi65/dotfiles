" タイトル文字列
set titlestring=Firefox

" スクロールの端などの際に出るbeepをoff
beep off
" エラー時にベルを鳴らさない
set noerrorbells

" Ctrl+r で再起動
map <C-r> :restart<CR>
" R で.vimperatorrcを再読込み
map R :source ~/git/yoshi65/dotfiles/.vimperatorrc<CR>

" h,lに前のタブ,次のタブを割り当てる
map h <C-PageUp>
map l <C-PageDown>

" 読み込み完了メッセージ
echo "Loaded from .vimperatorrc"
